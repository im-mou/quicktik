{
    "name": "quicktik",
    "version": "1.0.0",
    "description": "A simple time bounded to-do task scheduler.",
    "author": "im-mou",
    "license": "MIT",
    "repository": "im-mou/quicktik",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "bootstrap": "npm install; lerna bootstrap;",
        "package:next-app": "lerna run --scope next-app --stream dev",
        "export:next-app": "lerna run --scope next-app --stream export",
        "start": "run-p --print-label package:*",
        "build": "lerna run --parallel build",
        "export": "yarn build && yarn export:next-app",
        "test": "lerna run test",
        "prepare": "husky install",
        "lint": "lerna run lint"
    },
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/node": "17.0.18",
        "@types/react": "17.0.39",
        "eslint": "8.9.0",
        "lerna": "^4.0.0",
        "npm-run-all": "^4.1.5",
        "typescript": "4.5.5",
        "prettier": "^2.5.1",
        "pretty-quick": "^3.1.3",
        "jest": "^27.5.1",
        "husky": "^7.0.0",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.5.0",
        "cross-env": "^7.0.3"
    },
    "dependencies": {
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "dayjs": "^1.10.7",
        "mobx": "^6.4.1",
        "mobx-react": "^7.3.0",
        "pouchdb": "^7.2.2",
        "pouchdb-adapter-indexeddb": "^7.2.2",
        "pouchdb-upsert": "^2.2.0",
        "uuidv4": "^6.2.12",
        "material-ui-components": "1.0.0",
        "mantine-ui-components": "1.0.0"
    }
}
